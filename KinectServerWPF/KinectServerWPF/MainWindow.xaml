<Window x:Class="KinectServerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinectServerWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Viewbox>
            <Grid Width="1920" Height="1080">
                <Image Name="camera"/>
                <Canvas Name="canvas"/>
            </Grid>
        </Viewbox>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="655,17,0,0" TextWrapping="Wrap" Text="-" VerticalAlignment="Top" Width="120" Name="tblRightHandState"/>

    </Grid>
</Window>
